<%= form_for @person do |f| %>

  <%= label_or_error f, :name %>
  <%= f.text_field :name, class: '', autofocus: true %>

  <%= label_or_error f, :job %>
  <%= f.text_field :job, class: '', autofocus: true %>

  <%= label_or_error f, :bio %>
  <%= f.text_area :bio, class: 'm-b-2', autofocus: true %>

  <%= f.button 'Save' %>
  <%= link_to 'Cancel', @person, class: 'btn btn-secondary' %>

<% end %>
